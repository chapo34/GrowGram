// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Clients lesen nur öffentliche Inhalte (Posts)
    match /posts/{postId} {
      allow read: if true;
      allow write: if false;
    }

    // User-Daten nur über Admin SDK -> komplett sperren
    match /users/{userId} {
      allow read, write: if false;
    }

    // Chats: deine bisherige Regel ist okay
    match /chats/{threadId} {
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.members;
      allow create: if request.auth != null
                    && request.resource.data.members is list
                    && request.resource.data.members.size() == 2
                    && request.auth.uid in request.resource.data.members;
      allow update, delete: if false;

      match /messages/{msgId} {
        allow read: if request.auth != null
                    && request.auth.uid in
                       get(/databases/$(db)/documents/chats/$(threadId)).data.members;
        allow create: if request.auth != null
                      && request.auth.uid ==
                         request.resource.data.senderId
                      && request.auth.uid in
                         get(/databases/$(db)/documents/chats/$(threadId)).data.members;
        allow update, delete: if false;
      }
    }
  }
}