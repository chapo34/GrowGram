rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn()     { return request.auth != null; }
    function isOwner(userId)  { return isSignedIn() && request.auth.uid == userId; }
    function isImageWrite()   { return request.resource != null && request.resource.contentType.matches('image/.*'); }
    function isImageRead()    { return resource != null && resource.contentType.matches('image/.*'); }
    function isPublic()       { return resource != null && resource.metadata.visibility == 'public'; }

    /** Default deny */
    match /{path=**} {
      allow read, write: if false;
    }

    /** Post-Medien: uploads/{uid}/... – Lesen öffentlich wenn „public“, sonst nur Owner.
     *  Uploads/Löschen nur via Backend (Admin SDK) ⇒ Client write: deny
     */
    match /uploads/{userId}/{allPaths=**} {
      allow read : if isImageRead() && (isPublic() || isOwner(userId));
      allow write: if false;
    }

    /** Avatare: avatars/{uid}/... – üblich: öffentlich lesbar (Thumbnails)
     *  Uploads nur via Backend
     */
    match /avatars/{userId}/{allPaths=**} {
      allow read : if isImageRead();
      allow write: if false;
    }

    /** (Optional) generierte Thumbnails: posts/{postId}/... – öffentlich lesbar */
    match /posts/{postId}/{fileName} {
      allow read : if isImageRead();
      allow write: if false;
    }

    /** (Optional) Public-Assets Ordner – nur lesen */
    // match /public/{file=**} {
    //   allow read: if true;
    //   allow write: if false;
    // }
  }
}