// firestore.rules  — konsolidiert, fehlerfrei
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // ---- Posts: öffentlich lesbar, Clients schreiben NICHT direkt
    match /posts/{postId} {
      allow read: if true;
      allow write: if false;
    }

    // ---- Users: nur eigener Datensatz
    match /users/{userId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // ---- Chats: 1:1 Threads + Messages
    match /chats/{threadId} {
      // Nur Mitglieder dürfen den Thread lesen
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.members;

      // Erstellen darf nur, wer Mitglied ist; wir erzwingen 2er-Thread
      allow create: if request.auth != null
                    && request.resource.data.members is list
                    && request.resource.data.members.size() == 2
                    && request.auth.uid in request.resource.data.members;

      // Updates/Löschen nur über Server (Admin SDK)
      allow update, delete: if false;

      // Unterkollektion: Nachrichten
      match /messages/{msgId} {
        // Lesen: nur Mitglieder des Threads
        allow read: if request.auth != null
                    && request.auth.uid in
                       get(/databases/$(db)/documents/chats/$(threadId)).data.members;

        // Schreiben: nur Mitglied & Sender ist der eingeloggte User
        allow create: if request.auth != null
                      && request.auth.uid ==
                         request.resource.data.senderId
                      && request.auth.uid in
                         get(/databases/$(db)/documents/chats/$(threadId)).data.members;

        // Bearbeiten/Löschen von Nachrichten macht nur der Server
        allow update, delete: if false;
      }
    }
  }
}